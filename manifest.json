{
  "name": "No Merge Today",
  "description": "Block Github merge button on specific days",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "webRequest"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/content-script.js"
      ]
    }
  ]
}
